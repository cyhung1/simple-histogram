<UserControl x:Class="WpfSimpleHistogram.Histogram"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:local="clr-namespace:WpfSimpleHistogram"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <lvc:CartesianChart x:Name="chart" Series="{Binding SeriesCollection}" DataClick="CartesianChart_DataClick" LegendLocation="Right" >
        <lvc:CartesianChart.AxisX>
            <lvc:Axis Title="{Binding XLabel}" Labels="{Binding Labels}"></lvc:Axis>
            <lvc:Axis Title="" Labels="{Binding CurveAxisLabels}" Visibility="Hidden" ShowLabels="False"></lvc:Axis>
        </lvc:CartesianChart.AxisX>
        <lvc:CartesianChart.AxisY>
            <lvc:Axis Title="{Binding YLabel}" LabelFormatter="{Binding Formatter}" MinValue="0"></lvc:Axis>
        </lvc:CartesianChart.AxisY>
        <lvc:CartesianChart.ChartLegend>
            <local:CustomLegend></local:CustomLegend>
        </lvc:CartesianChart.ChartLegend>
    </lvc:CartesianChart>
</UserControl>
