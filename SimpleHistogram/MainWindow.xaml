<Window x:Class="SimpleHistogram.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:view="clr-namespace:WpfSimpleHistogram.View;assembly=WpfSimpleHistogram"
        x:Name="control"
        Title="MainWindow" Height="350" Width="525">
    <view:WpfSimpleHistogram 
        YLabel="Count" XLabel="Value (mm)" 
        ItemsSource="{Binding ElementName=control, Path=Items}" BinSize="0.01"
        BarClicked="WpfSimpleHistogram_BarClicked"/>
</Window>
